<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spring.cs2340.shelterseek">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".controller.WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.MainScreen" />
        <activity android:name=".controller.UserRegistrationScreen"/>
        <activity android:name=".controller.ShelterRegistrationScreen"/>
        <activity android:name=".controller.AdminRegistrationScreen" />
        <activity android:name=".controller.ShelterDetail" ></activity>
        <activity
            android:name=".controller.MainScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controller.UserRegistrationScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controller.ShelterRegistrationScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controller.AdminRegistrationScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".controller.ShelterDetail" />
        <activity
            android:name=".controller.SearchScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>